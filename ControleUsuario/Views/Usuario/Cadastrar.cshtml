@{
    ViewBag.Title = "Cadastrar";
}


<form class="form-horizontal" method="post" action="/Usuario/Login">
    <fieldset>

        <!-- Form Name -->
        <legend>Login</legend>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="email">E-mail</label>
            <div class="col-md-4">
                <input id="email" name="email" type="text" required placeholder="Entre com seu e-mail" class="form-control input-md">

            </div>
        </div>

        <!-- Password input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="senha">Senha</label>
            <div class="col-md-4">
                <input id="senha" name="senha" type="password" required placeholder="Entre com sua senha" class="form-control input-md">

            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Entrar" class="btn btn-primary" />
        </div>
        <h2>@TempData["Mensagem"]</h2>
    </fieldset>
</form>


<form class="form-horizontal" action="/Usuario/Cadastrar" method="post">
    <fieldset>

        <!-- Form Name -->
        <legend>Cadastrar</legend>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="nome">Nome</label>
            <div class="col-md-4">
                <input id="nome" name="nome" type="text" placeholder="Entre com seu nome" class="form-control input-md">

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="email">E-mail</label>
            <div class="col-md-4">
                <input id="email" name="email" type="text" placeholder="Entre com seu e-mail" class="form-control input-md">

            </div>
        </div>

        <!-- Password input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="senha">Senha</label>
            <div class="col-md-4">
                <input id="senha" name="senha" type="password" placeholder="Entre com sua senha" class="form-control input-md">

            </div>
        </div>

        <!-- Select Basic -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="permissao">Selecione o nível de usuário</label>
            <div class="col-md-4">
                <select id="permissao" name="permissao" class="form-control">
                    <option value="0">Selecione</option>
                    <option value="Usuario">Usuário</option>
                    <option value="Administrador">Administrador</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Cadastrar" class="btn btn-success" />
        </div>
        <h2>@TempData["Mensagem"]</h2>
    </fieldset>
</form>


